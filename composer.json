{
  "name": "krzysiekpiasecki/burzedzisnet",
  "description": "Notification on weather hazards such as: lightnings, tornadoes, strong winds, heavy precipitation and low and high air temperatures.",
  "keywords": ["storm", "weather", "alert", "api", "soap", "web service"],
  "minimum-stability": "stable",
  "license": "MIT",
  "authors": [
    {
      "name": "Krzysztof Piasecki",
      "email": "krzysiekpiasecki@gmail.com"
    }
  ],
  "scripts": {
    "test": "./vendor/bin/phpunit",
    "fix": "./vendor/bin/php-cs-fixer fix",
    "doc": "./vendor/bin/sami.php update sami.conf.php",
    "build": ["composer fix", "composer test", "composer doc"]
  },
  "require": {
    "php": ">=7"
  },
  "require-dev": {
    "sami/sami": "^4.0",
    "phpunit/phpunit": "^7.1",
    "friendsofphp/php-cs-fixer": "^2.11"
  },
  "autoload": {
    "psr-4": {
      "BurzeDzisNet\\": "src/BurzeDzisNet"
    }
  }
}
